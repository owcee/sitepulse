rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Task Photos - authenticated users can upload, anyone authenticated can read
    match /task_photos/{projectId}/{taskId}/{photoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false; // Photos cannot be deleted, only marked as rejected
    }
    
    // Usage Submission Photos - workers upload, engineers review
    match /usage_photos/{projectId}/{submissionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }
    
    // Profile images (future use)
    match /profile_images/{userId} {
      allow read: if true; // Public read
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}













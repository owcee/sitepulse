rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Task Photos - authenticated users can upload, anyone authenticated can read
    match /task_photos/{allPaths=**} {
      allow read, write: if request.auth != null;
      allow delete: if false;
    }
    
    // Usage Submission Photos - workers upload, engineers review
    match /usage_photos/{allPaths=**} {
      allow read, write: if request.auth != null;
      allow delete: if false;
    }
    
    // Profile images (future use)
    match /profile_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }
    
    // Catch-all for authenticated users (safety net)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
}













